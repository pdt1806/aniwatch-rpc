{
  "manifest_version": 3,
  "name": "HiAnime RPC",
  "description": "You watch anime on HiAnime.to? This extension will show you what you're watching on Discord!",
  "version": "1.2.1",
  "icons": {
    "16": "img/icon.png",
    "32": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "permissions": ["tabs", "storage", "webNavigation"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.hianime.to/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["*://*/*"]
}
